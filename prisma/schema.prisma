generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Category {
  id       Int      @id @default(autoincrement())
  name     String   @unique
  pdfBooks PdfBook[]
}

model users {
  id          Int       @id @default(autoincrement())
  email       String    @unique
  password    String
  full_name   String
  profile_pic String? @default("https://i.pinimg.com/474x/97/aa/84/97aa847d061a14894178805f1d551500.jpg")
  about       String? @default("No bio yet.")
  pdfBooks    PdfBook[]
  session_id    String? @unique
  isVerified Boolean @default(false)
  securityEnabled Boolean @default(false)
  reviews      Review[]
}

model PdfBook {
  id           Int       @id @default(autoincrement())
  cover_url    String?
  pdf_url      String    @unique
  title        String
  author_name  String
  category     Category? @relation(fields: [category_id], references: [id])
  category_id  Int?
  publisher    String
  language     String
  year         Int
  edition      String
  description  String?
  uploader     users?     @relation(fields: [uploader_id], references: [id])
  uploader_id  Int?
  reviews      Review[]
}

model Review {
  id          Int      @id @default(autoincrement())
  book_id     Int
  user_id     Int
  rating      Int
  description String
  created_at  DateTime @default(now())
  book        PdfBook  @relation(fields: [book_id], references: [id])
  user        users    @relation(fields: [user_id], references: [id])
}