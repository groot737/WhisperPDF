<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="initial-scale=1, width=device-width" />

    <link rel="stylesheet" href="/auth/global.css" />
    <link rel="stylesheet" href="/auth/index.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" />
</head>

<body>
    <div class="log-in-dark-mode">
        <form class="form" action="/login" method="post">
            <div class="welcome-back-parent">
                <div class="welcome-back">Welcome back</div>
                <h2 class="title">Log in</h2>
            </div>
            <div class="form-instance">
                <button class="login-button">
                    <div class="button">
                        <img class="icongoogle-original" alt="" src="/auth/images/icongoogle--original.svg" />

                        <div class="login-now">Google</div>
                    </div>
                    <div class="button1">
                        <img class="iconfacebook-original" alt="" src="/auth/images/iconfacebook--original.svg" />

                        <div class="login-now1">Facebook</div>
                    </div>
                </button>
                <div class="or">Or</div>
            </div>
            <div class="frame-parent">
                <div class="frame-group">
                    <div class="email-wrapper">
                        <div class="email">Email</div>
                    </div>
                    <div class="input-text-wrapper">
                        <div class="input-text">
                            <input name="email" class="eye-icon" placeholder="balamia@gmail.com" type="text" />

                            <div class="login-button1">
                                <img class="iconeye" alt="" src="/auth/images/iconeye.svg" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="frame-container">
                    <div class="password-parent">
                        <div class="password">Password</div>
                    </div>
                    <div class="input">
                        <div class="input-text1">
                            <input name="password" class="context" placeholder="Enter your password" type="password" />

                            <div class="iconeye-wrapper" id="eyeBtn">
                                <img class="iconeye1" alt="" src="/auth/images/iconeye.svg" />
                            </div>
                        </div>
                    </div>
                </div>
                <button class="button2">
                    <div class="login-now2">Log in</div>
                </button>
            </div>
            <div class="form-inner">
                <div class="already-have-an-account-parent">
                    <div class="already-have-an">Don't have an account ?</div>
                    <a href="/register" class="log-in">Register</a>
                </div>
            </div>
        </form>
    </div>
</body>
<script>
    document.getElementById('eyeBtn').addEventListener('click', () => {
        const inputField = document.getElementsByTagName('input')[1];
        inputField.type = inputField.type === 'password' ? 'text' : 'password';
    });

</script>

</html>