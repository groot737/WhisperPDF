<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="initial-scale=1, width=device-width" />

    <link rel="stylesheet" href="/auth/global.css" />
    <link rel="stylesheet" href="/auth/index.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" />
</head>

<body>
    <div class="log-in-dark-mode">
        <form class="form" action="/change-password" method="post">
            <div class="form-instance">
                <div class="frame-container">
                    <div class="email-wrapper">
                        <div class="email">Password</div>
                    </div>
                    <div class="input">
                        <div class="input-text1">
                            <input name="password" class="context" placeholder="Enter your Password" type="password"/>
                            <input type="text" id="tempID" name="id" value="12" hidden>
                        </div>
                    </div>
                </div>
                <button class="button2">
                    <div class="login-now2">Update password</div>
                </button>
            </div>
        </form>
    </div>
</body>
<script>
    document.getElementById('tempID').value = window.location.pathname.split("/").filter(part => part.trim() !== '').pop() 
</script>
</html>
